{
  "manifest_version": 3,
  "name": "B站收藏夹导出工具",
  "version": "1.0",
  "description": "导出B站收藏夹内容的Chrome扩展",
  "permissions": [
    "cookies",
    "downloads",
    "*://*.biliplus.com/*",
    "storage"
  ],
  "host_permissions": [
    "*://*.bilibili.com/*",
    "*://*.biliplus.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://space.bilibili.com/*"],
      "js": ["js/content.js"],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["fonts/*"],
    "matches": ["*://*.bilibili.com/*"]
  }, {
    "resources": ["pages/*"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 